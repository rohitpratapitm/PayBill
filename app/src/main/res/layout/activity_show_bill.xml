<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sikar.paybill.ShowBill"
    android:id="@+id/show_bill"
    android:visibility="visible">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Customer Name"
        android:id="@+id/label_customer_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/customer_name"
        android:layout_below="@+id/label_customer_name"
        android:layout_alignParentStart="true"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Account Number"
        android:id="@+id/label_account_number"
        android:layout_marginTop="23dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/customer_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/account_number"
        android:layout_below="@+id/label_account_number"
        android:layout_alignParentStart="true"
        android:singleLine="false"
        android:hint="10 Digit account number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bill Amount"
        android:id="@+id/label_bill_amount"
        android:layout_below="@+id/account_number"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/bill_amount"
        android:layout_below="@+id/label_bill_amount"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Amount to be paid"
        android:textColor="#FF000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Due Date"
        android:id="@+id/label_due_date"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/bill_amount"
        android:layout_alignParentStart="true"
        android:textColor="#FF000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/due_date"
        android:layout_below="@+id/label_due_date"
        android:layout_alignParentStart="true"
        android:hint="Last date " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mobile Number"
        android:id="@+id/label_mobile_number"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/due_date"
        android:layout_alignParentStart="true"
        android:textColor="#FF000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mobile number of the customer"
        android:id="@+id/mobile_number"
        android:layout_below="@+id/label_mobile_number"
        android:layout_alignParentStart="true"
        android:textColor="#FF000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay Bill"
        android:id="@+id/button_pay_bill"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/label_mobile_number" />
</RelativeLayout>
