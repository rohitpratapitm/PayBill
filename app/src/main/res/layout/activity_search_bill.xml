<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sikar.paybill.SearchBill"
    android:visibility="visible"
    android:transitionGroup="false">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Account Id"
        android:id="@+id/showText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:inputType="none" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/account_id"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/showText"
        android:layout_alignParentStart="true"
        android:editable="true"
        android:enabled="true"
        android:inputType="number"
        android:textColor="#ff0000"
        android:linksClickable="true"
        android:shadowColor="#FFFF00"
        android:singleLine="true"
        android:clickable="false"
        android:outlineProvider="bounds" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Bill"
        android:id="@+id/view_bill"
        android:layout_below="@+id/account_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:enabled="true"
        android:clickable="true" />
</RelativeLayout>
